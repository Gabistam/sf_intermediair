{% extends "front/base.html.twig" %}

{% block main %}

	<div class="container">
		<div class="card" style="width: 50%;">
			<img src="https://picsum.photos/450/250" class="card-img-top" alt="...">
			<div class="card-body">
				{{ form_start(categoryForm) }}

				{{ form_label(categoryForm.name, 'Nom de la catégorie : ', {'label_attr' : { 'class' : 'label' } } ) }}
				{{ form_widget(categoryForm.name, {'attr' : {'placeholder' : 'Nom de la catégorie', 'class' : 'cat-name'} } ) }}

				{{ form_label(categoryForm.description, 'Description de la catégorie : ', {'label_attr' : { 'class' : 'label' } } ) }}
				{{ form_widget(categoryForm.description, {'attr' : {'placeholder' : 'Description de la catégorie', 'class' : 'cat-description'} } ) }}

				{{ form_widget(categoryForm.enregistrer, { 'attr' : {'class' : 'btn'} } ) }}

				{{ form_end(categoryForm) }}
			</div>
		</div>
	</div>

{% endblock %}
