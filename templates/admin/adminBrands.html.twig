{% extends "admin/adminBase.html.twig" %}

{% block main %}

	{% for brand in brands %}
		<div class="container">
			<div class="card" style="width: 50%;">
				<img src="{{ asset('media/' ~ brand.media) }}" alt="{{ brand.name }}">
				<div class="card-body">

					<h2>

						<a href="{{ path("brand_show", {'id' : brand.id } ) }}">
							<button type="button" class="btn btn-primary">{{ brand.name }}</button>
						</a>
					</h2>

				</div>
			</div>
		</div>
	{% endfor %}

{% endblock %}
