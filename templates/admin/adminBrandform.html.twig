{% extends "admin/adminBase.html.twig" %}

{% block main %}

	<div class="container">
		<div class="card" style="width: 50%;">
			<img src="{{ asset('media/' ~ brand.media) }}" alt="{{ brand.name }}">
			<div class="card-body">
				{{form_start(brandForm)}}

				{{form_label(brandForm.name, 'Nom')}}
				{{form_widget(brandForm.name)}}

				{{form_label(brandForm.description, 'Description')}}
				{{form_widget(brandForm.description)}}
				<hr>
				{{form_label(brandForm.media, 'Image')}}
				{{form_widget(brandForm.media)}}
				<hr><br>
				{{form_widget(brandForm.Enregistrer)}}

				{{form_end(brandForm)}}
			</div>
		</div>
	</div>

{% endblock %}
