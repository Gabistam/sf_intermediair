{% extends "admin/adminBase.html.twig" %}

{% block main %}

	<div class="container">
		<div class="card" style="width: 50%;">
			<img src="https://picsum.photos/450/250" class="card-img-top" alt="...">
			<div class="card-body">
				{{ form_start(mediaForm) }}

				{{ form_label(mediaForm.alt, 'Alt de l\'image') }}
				{{ form_widget(mediaForm.alt) }}
				<hr>
				{{ form_label(mediaForm.title, 'Titre de l\'image') }}
				{{ form_widget(mediaForm.title) }}
				<hr>
				{{ form_label(mediaForm.product, 'Produit de l\'image') }}
				{{ form_widget(mediaForm.product) }}
				<hr>
				{{ form_label(mediaForm.src, 'Fichier de l\'image') }}
				{{ form_widget(mediaForm.src) }}
				<hr><br>
				{{ form_widget(mediaForm.Enregistrer)}}

				{{ form_end(mediaForm) }}
			</div>
		</div>
	</div>

{% endblock %}
